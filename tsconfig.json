{
   "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": false,
      "declaration": false,
      "strictNullChecks": true,
      "noUnusedLocals": false,
      "skipLibCheck": true,
      "pretty": true,
      "outDir": "dist",
      "lib": ["es2017"],
      "baseUrl": ".",
      "esModuleInterop": true
   },
   "exclude": ["node_modules", "test"]
}

{
   "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": false,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "pretty": true,
      "outDir": "dist",
      "lib": ["es2017"],
      "baseUrl": ".",
      "paths": {},
      "esModuleInterop": true
   },
   "include": ["src"],
   "exclude": ["node_modules", "test"]
}
